# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/lms
# Or MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/lms

# Shopify Configuration
SHOPIFY_SHOP_DOMAIN=marketplace.vectra-intl.com
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

# JWT Secret (for internal token generation)
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# External JWT (e.g. ApnaSite / training.vectra-intl.com auth/login?jwtToken=...)
# Same secret used to sign the external JWT. Required for POST /api/auth/external-login.
EXTERNAL_JWT_SECRET=your_external_jwt_secret

# Frontend URL (for CORS and redirect to /auth/login; can be different domain)
FRONTEND_URL=http://localhost:3000
# Production: https://training.vectra-intl.com or https://lms-frontend.azurewebsites.net

# Backend API URL (for SCORM and API calls; this app’s public URL when deployed)
BACKEND_URL=http://localhost:3001
# Production: https://lms-backend.azurewebsites.net (Shopify “My Courses” links to this domain)
